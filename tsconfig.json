{
  "compilerOptions": {
      // Type-checker options
      "strict": true,
      "skipLibCheck": true,

      // Codegen options
      "sourceMap": true,
      "esModuleInterop": true,
      "jsx": "react",
      "lib": ["es2020", "dom"],
      "module": "ES2020",
      "moduleResolution": "Node",

      // Output file options
      "outDir": "dist",
      "declaration": true,

      "experimentalDecorators": true
  },
}
