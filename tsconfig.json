{
    "compilerOptions": {
        // Type-checker options
        "strict": true,

        // Codegen options
        "sourceMap": true,
        "esModuleInterop": true,
        "jsx": "react",
        "lib": ["es2018", "dom"],

        // Output file options
        "outDir": "dist",
        "declaration": true,
        "emitDeclarationOnly": true,

        "experimentalDecorators": true
    },

    "include": ["src/**/*"]
}
