{
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "init-repo": "yarn && lerna bootstrap && lerna link && lerna run full",
    "clean-repo": "lerna clean && rm -r node_modules && find packages -name dist | xargs rm -r",
    "full": "lerna run full",
    "lint": "lerna run lint",
    "watch": "lerna run --parallel  --no-bail build -- -w",
    "commit-check": "yarn clean-repo && yarn init-repo && yarn lint"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.178",
    "@types/node": "^17.0.0",
    "@types/react": "^17.0.13",
    "@types/react-dom": "^17.0.9",
    "@types/sass": "^1.16.1",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "csstype": "^3.0.8",
    "esbuild": "^0.14.5",
    "esbuild-sass-plugin": "^1.8.1",
    "eslint": "^8.4.1",
    "eslint-config-airbnb": "^19.0.2",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "lerna": "^4.0.0",
    "lodash": "^4.17.21",
    "typescript": "^4.4.4"
  }
}
