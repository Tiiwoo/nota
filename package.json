{
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "init-repo": "yarn && lerna bootstrap && lerna link && lerna run full",
    "clean-repo": "lerna clean -y && rm -rf node_modules && find packages -name dist -exec rm -r {} +",
    "full": "lerna run full",
    "lint": "lerna run lint",
    "build": "lerna run build",
    "watch": "lerna run --parallel  --no-bail build -- -w",
    "test": "jest --config jest.config.json",
    "commit-check": "yarn clean-repo && yarn init-repo && yarn lint && yarn test"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.178",
    "@types/node": "^17.0.6",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.9",
    "@types/sass": "^1.16.1",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "csstype": "^3.0.8",
    "esbuild": "^0.14.10",
    "esbuild-jest": "^0.5.0",
    "esbuild-sass-plugin": "^2.0.0",
    "eslint": "^8.6.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^27.4.5",
    "lerna": "^4.0.0",
    "lodash": "^4.17.21",
    "typescript": "^4.4.4"
  }
}
